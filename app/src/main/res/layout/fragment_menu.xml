<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".login.MenuFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imgBttnRummy"
                android:layout_width="224dp"
                android:layout_height="57dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/logorummy"
                android:src="@drawable/logorummy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titoLogin" />

            <TextView
                android:id="@+id/titoLogin"
                style="@style/titles"
                android:layout_marginStart="50dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="20dp"
                android:text="@string/please_chose_game"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtIntroduceTime"
                style="@style/textPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="36dp"
                android:text="@string/time"
                android:textColor="#E8F1F5"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBttnRummy" />

            <TextView
                android:id="@+id/ply1"
                style="@style/textPlayers"

                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="60dp"
                android:text="@string/ply1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtIntroduceTime"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/ply2"
                style="@style/textPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="40dp"
                android:text="@string/ply2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ply1"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/ply3"
                style="@style/textPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="40dp"
                android:text="@string/ply3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ply2"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/ply4"
                style="@style/textPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="40dp"
                android:text="@string/ply4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ply3"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/edply1"
                app:layout_constraintBaseline_toBaselineOf="@+id/ply1"
                app:layout_constraintStart_toEndOf="@+id/ply1"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                style="@style/edtplyr" />

            <EditText
                android:id="@+id/edply2"
                android:layout_width="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/ply2"
                app:layout_constraintStart_toEndOf="@+id/ply2"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                style="@style/edtplyr"/>

            <EditText
                android:id="@+id/edply3"
                app:layout_constraintBaseline_toBaselineOf="@+id/ply3"
                app:layout_constraintStart_toEndOf="@+id/ply3"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                style="@style/edtplyr"/>

            <EditText
                android:id="@+id/edply4"
                app:layout_constraintBaseline_toBaselineOf="@+id/ply4"
                app:layout_constraintStart_toEndOf="@+id/ply4"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                style="@style/edtplyr"/>

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBaseline_toBaselineOf="@+id/txtIntroduceTime"
                app:layout_constraintStart_toEndOf="@+id/txtIntroduceTime"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>