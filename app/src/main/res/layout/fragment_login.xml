<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".login.Login">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imgBttnRummy"
                android:layout_width="224dp"
                android:layout_height="57dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/logorummy"
                android:src="@drawable/logorummy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titoLogin" />

            <ImageButton
                android:id="@+id/imgBttnScrabble"
                android:layout_width="222dp"
                android:layout_height="62dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/logoscrabble"
                android:src="@drawable/logoscrabble"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBttnRummy" />

            <TextView
                android:id="@+id/titoLogin"
                style="@style/titles"
                android:layout_marginTop="30dp"
                android:text="@string/please_chose_game"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridLayout2"
                android:layout_width="346dp"
                android:layout_height="154dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumber">

                <CheckBox
                    android:id="@+id/chbRaimon"
                    style="@style/chkboxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/raimon"
                    app:layout_column="0"
                    app:layout_row="1" />

                <CheckBox
                    android:id="@+id/chbSanti"
                    style="@style/chkboxes"
                    android:text="@string/santi"
                    app:layout_column="0"
                    app:layout_row="0" />

                <CheckBox
                    android:id="@+id/chbCrisB"
                    style="@style/chkboxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cris_b"
                    app:layout_column="1"
                    app:layout_row="0" />

                <CheckBox
                    android:id="@+id/chbPare"
                    style="@style/chkboxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pare"
                    app:layout_column="1"
                    app:layout_row="1" />

                <CheckBox
                    android:id="@+id/chbMare"
                    style="@style/chkboxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mare"
                    app:layout_column="2"
                    app:layout_row="0" />

                <CheckBox
                    android:id="@+id/chbCrisS"
                    style="@style/chkboxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cris_s"
                    app:layout_column="2"
                    app:layout_row="1" />

                <CheckBox
                    android:id="@+id/chbInvitat1"
                    style="@style/chkboxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invitat_1"
                    app:layout_column="0"
                    app:layout_row="2" />

                <CheckBox
                    android:id="@+id/chbInvitat2"
                    style="@style/chkboxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invitat_2"
                    app:layout_column="1"
                    app:layout_row="2" />

                <CheckBox
                    android:id="@+id/chbInvitat3"
                    style="@style/chkboxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invitat_3"
                    app:layout_column="2"
                    app:layout_row="2" />

            </androidx.gridlayout.widget.GridLayout>

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintBaseline_toBaselineOf="@+id/txtIntroduceTime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                android:textColor="#E8F1F5"
                app:layout_constraintStart_toEndOf="@+id/txtIntroduceTime"
                android:autofillHints=""
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/txtIntroduceTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/time"
                android:textColor="#E8F1F5"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/editTextNumber"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBttnScrabble" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>