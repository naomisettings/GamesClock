<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".login.Login">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/bttnScrabbleStadistics"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/button_shape"
                android:text="@string/scrabble_stadistis"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bttnRummyStadistics" />

            <Button
                android:id="@+id/bttnRummyStadistics"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/button_shape"
                android:text="@string/rummy_stadistics"
                app:layout_constraintBottom_toTopOf="@+id/bttnScrabbleStadistics"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bttnSelectGame" />

            <Button
                android:id="@+id/bttnSelectGame"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/button_shape"
                android:text="@string/select_game"
                app:layout_constraintBottom_toTopOf="@+id/bttnRummyStadistics"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>