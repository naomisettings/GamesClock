<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="chkboxes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@drawable/checkboxes_selector</item>
    </style>

    <style name="time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="textPlayers">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/players_shape</item>
    </style>

    <style name="edtplyr">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
    </style>
</resources>