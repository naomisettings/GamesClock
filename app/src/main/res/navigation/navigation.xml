<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/login">
    <fragment
        android:id="@+id/login"
        android:name="cat.raimon.gamesclock.login.Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_rummyFragment"
            app:destination="@id/rummyFragment" />
        <argument
            android:name="listPlayers"
            app:argType="string[]" />
    </fragment>
    <fragment
        android:id="@+id/rummyFragment"
        android:name="cat.raimon.gamesclock.rummikub.RummyFragment"
        android:label="RummyFragment"
        tools:layout="@layout/fragment_rummy">
        <action
            android:id="@+id/action_rummyFragment_to_login"
            app:destination="@id/login" />
        <argument
            android:name="listPlayers"
            app:argType="string[]" />
    </fragment>
</navigation>